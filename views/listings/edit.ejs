<%= layout("/layouts/boilerplate.ejs") %>

<body>
    <div class="container">
        <div class="row">
            <div class="col-8 offset-2">
                <br><br>
                <h3>Edit this Listing</h3>
                <!-- Form to Edit the Listing -->
                <form method="post" action="/listings/<%= listing._id %>?_method=PUT" enctype="multipart/form-data" class="needs-validation" novalidate>
                    
                    <!-- Title Field -->
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" name="listing[title]" class="form-control" value="<%= listing.title %>" placeholder="<%= listing.title %>" id="title" required />
                        <div class="invalid-feedback">Enter a valid Title</div>
                    </div>
                    
                    <!-- Description Field -->
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea name="listing[description]" class="form-control" placeholder="<%= listing.description %>" id="description" required ><%= listing.description %></textarea>
                        <div class="invalid-feedback">Enter a short Description</div>
                    </div>

                    <!-- Category Dropdown -->
                    <div class="mb-3">
                        <label for="category" class="form-label">Category</label>
                        <select name="listing[category]" class="form-control" id="category" required>
                            <option value="">Select Category</option>
                            <option value="Trending" <%= listing.category === 'Trending' ? 'selected' : '' %>>Trending</option>
                            <option value="Beds" <%= listing.category === 'Beds' ? 'selected' : '' %>>Beds</option>
                            <option value="Iconic Cities" <%= listing.category === 'Iconic Cities' ? 'selected' : '' %>>Iconic Cities</option>
                            <option value="Mountains" <%= listing.category === 'Mountains' ? 'selected' : '' %>>Mountains</option>
                            <option value="Castles" <%= listing.category === 'Castles' ? 'selected' : '' %>>Castles</option>
                            <option value="Camping" <%= listing.category === 'Camping' ? 'selected' : '' %>>Camping</option>
                            <option value="Farm" <%= listing.category === 'Farm' ? 'selected' : '' %>>Farm</option>
                            <option value="Arctic" <%= listing.category === 'Arctic' ? 'selected' : '' %>>Arctic</option>
                        </select>
                        <div class="invalid-feedback">Please select a valid category</div>
                    </div>

                    <!-- Current Image Preview -->
                    <div class="mb-3">
                        <label>Original Listing Image</label><br>
                        <img src="<%= originalImageUrl %>" alt="Listing Image" style="width: 100%; max-width: 300px;"/>
                    </div>

                    <!-- Upload New Image -->
                    <div class="mb-3">
                        <label for="image" class="form-label">Upload New Image</label>
                        <input type="file" name="listing[image]" class="form-control" id="image"/>
                    </div>

                    <!-- Price and Location Fields -->
                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-label">Price</label>
                            <input type="number" name="listing[price]" value="<%= listing.price %>" class="form-control" placeholder="<%= listing.price %>" id="price" required />
                            <div class="invalid-feedback">Enter a valid Price</div>
                        </div>

                        <div class="mb-3 col-md-8">
                            <label for="location" class="form-label">Location</label>
                            <input type="text" name="listing[location]" value="<%= listing.location %>" class="form-control" placeholder="<%= listing.location %>" id="location" required />
                            <div class="invalid-feedback">Location should be valid</div>
                        </div>
                    </div>

                    <!-- Country Field -->
                    <div class="mb-3">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" name="listing[country]" value="<%= listing.country %>" class="form-control" placeholder="<%= listing.country %>" id="country" required />
                        <div class="invalid-feedback">Country name should be valid</div>
                    </div>

                    <!-- Submit Button -->
                    <button class="btn btn-dark mb-3 w-100 edit-btn">Edit</button>
                </form>
            </div>
        </div>
    </div>
</body>
