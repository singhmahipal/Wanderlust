<%= layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="container">
        <div class="row">
            <div class="col-8 offset-2">
                <br><br>
                <h3>Edit this Listing</h3>
                <form method="post" action="/listings/<%= listing._id %>?_method=PUT" class="needs-validation" novalidate>
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" name="listing[title]" class="form-control" value="<%= listing.title %>" placeholder="<%= listing.title %>" id="title" required />
                        <div class="invalid-feedback">Enter a valid Title</div>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea name="listing[description]" class="form-control" placeholder="<%= listing.description %>" id="description" required ><%= listing.description %></textarea>
                        <div class="invalid-feedback">Enter a short Description</div>
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Image Link/URL</label>
                        <input type="text" name="listing[image][url]" value="<%= listing.image.url %>" class="form-control" placeholder="<%= listing.image.url %>" id="image" required />
                        <div class="invalid-feedback">Enter valid Image URL</div>
                    </div>
                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-label">Price</label>
                            <input type="number" name="listing[price]" value="<%= listing.price %>" class="form-control" placeholder="<%= listing.price %>" id="price" required />
                            <div class="invalid-feedback">Enter a valid Price</div>
                        </div>
                        <div class="mb-3 col-md-8">
                            <label for="location" class="form-label">Location</label>
                            <input type="text" name="listing[location]" value="<%= listing.location %>" class="form-control" placeholder="<%= listing.location %>" id="location" required />
                            <div class="invalid-feedback">Location should be valid</div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" name="listing[country]" value="<%= listing.country %>" class="form-control" placeholder="<%= listing.country %>" id="country" required />
                        <div class="invalid-feedback">Country name should be valid</div>
                    </div>
                    <button class="btn btn-dark mb-3 w-100 edit-btn">Edit</button>
                </form>
            </div>
        </div>
    </div>
</body>
