<% layout("/layouts/boilerplate") %>

<!-- Include MapLibre GL JS -->
<link href="https://unpkg.com/maplibre-gl@latest/dist/maplibre-gl.css" rel="stylesheet" />

<script>
    // Pass listing data to JavaScript (no need for mapToken anymore)
    const listing = <%- JSON.stringify(listing) %>;
</script>

<div class="row mt-3">
    <!-- Title -->
    <div class="col-8 offset-3">
        <h3><%= listing.title %></h3>
    </div>

    <!-- Listing Card -->
    <div class="card col-6 offset-3 show-card mb-3 listing-card">
        <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing image">
        <div class="card-body">
            <p class="card-text">Owned By <i><%= listing.owner.username %></i></p>
            <p class="card-text"><%= listing.description %></p>
            <p class="card-text">&#8377; <%= listing.price.toLocaleString("en-IN") %></p>
            <p class="card-text"><%= listing.location %></p>
            <p class="card-text"><%= listing.country %></p>            
        </div>
    </div>
</div>

<!-- Buttons Row -->
<% if (currUser && currUser._id.equals(listing.owner._id)) { %>
    <div class="btns mb-3">
        <!--Edit button-->
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
        
        <!--Delete button-->
        <form method="post" action="/listings/<%= listing._id %>?_method=DELETE"> 
            <button class="btn btn-dark offset-5">Delete</button> 
        </form> 
    </div>
<% } %>           

<div class="col-8 offset-3 mb-3">
    <hr>
    <% if (currUser) { %>      
        <h4>Leave a Review:</h4>
        <form action="/listings/<%= listing._id %>/reviews" method="post" class="needs-validation" novalidate>            
            <div class="mb-3 mt-3">
                <label for="rating" class="form-label">Rating</label>
                <fieldset class="starability-slot">
                    <input type="radio" id="rating-0" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                    
                    <input type="radio" id="rating-1" name="review[rating]" value="1" />
                    <label for="rating-1" title="Terrible">1 star</label>
                    
                    <input type="radio" id="rating-2" name="review[rating]" value="2" />
                    <label for="rating-2" title="Not good">2 stars</label>
                    
                    <input type="radio" id="rating-3" name="review[rating]" value="3" />
                    <label for="rating-3" title="Average">3 stars</label>
                    
                    <input type="radio" id="rating-4" name="review[rating]" value="4" />
                    <label for="rating-4" title="Very good">4 stars</label>
                    
                    <input type="radio" id="rating-5" name="review[rating]" value="5" />
                    <label for="rating-5" title="Amazing">5 stars</label>
                </fieldset>
            </div>
            <div class="mb-3 mt-3">
                <label for="comment" class="form-label">Comment</label>
                <textarea type="text" name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
                <div class="invalid-feedback">please add some comments for review</div>
            </div>
            <button class="btn btn-outline-dark">Submit</button>
        </form>
        <hr> 
    <% } %>  

    <!-- Reviews -->
    <% if (listing.reviews.length > 0) { %>
       <p><b>All Reviews:</b></p>
       <div class="row">
            <% for (review of listing.reviews) { %>
                <div class="card col-5 mb-3 ms-3">
                    <div class="card-body">
                        <div class="card-title">@<%= review.author.username %></div>
                        <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
                        <div class="card-text"> <%= review.comment %> </div>
                        <% if (currUser && currUser._id.equals(review.author._id)) { %>
                            <form method="post" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" class="mb-3">
                                <button class="btn btn-sm btn-dark">Delete</button>
                            </form>
                        <% } %>
                    </div>
                </div>
            <% } %>
        </div> 
    <% } %>        
</div>

<!-- Map Section -->
<div class="col-8 offset-3 mb-3">
    <h3>Where you'll be</h3>
    <div id="map" style="height: 300px; border: 1px solid #ddd; border-radius: 5px;"></div>
</div>

<!-- Include map script only if we have the map container -->
<script src="/js/map.js"></script>